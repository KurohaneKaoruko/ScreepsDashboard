{
  "name": "screeps-dashboard",
  "private": true,
  "version": "0.1.0-alpha7",
  "type": "module",
  "scripts": {
    "dev": "cd src-next && next dev",
    "build": "cd src-next && next build",
    "start": "cd src-next && next start",
    "lint": "cd src-next && eslint .",
    "typecheck:web": "tsc --noEmit --incremental false -p src-next/tsconfig.json",
    "rust:fmt:check": "cargo fmt --manifest-path src-tauri/Cargo.toml --all -- --check",
    "rust:clippy": "cargo clippy --manifest-path src-tauri/Cargo.toml --all-targets -- -D warnings",
    "check": "npm run lint && npm run typecheck:web && npm run rust:fmt:check && npm run rust:clippy && npm run build",
    "tauri": "tauri",
    "tauri:desktop:dev": "tauri dev",
    "tauri:desktop:build": "tauri build",
    "tauri:android:init": "tauri android init",
    "tauri:android:dev": "tauri android dev",
    "tauri:android:build:apk": "npm run package:target -- android-apk --ci",
    "tauri:android:build:aab": "npm run package:target -- android-aab --ci",
    "tauri:android:build:all": "npm run package:target -- android-all --ci",
    "package:target": "node scripts/build/package.mjs",
    "package:all": "node scripts/build/package-all-host.mjs",
    "package:windows:amd64": "npm run package:target -- windows-amd64 --ci",
    "package:windows:arm64": "npm run package:target -- windows-arm64 --ci",
    "package:windows:all": "npm run package:windows:amd64 && npm run package:windows:arm64",
    "package:linux:amd64": "npm run package:target -- linux-amd64 --ci",
    "package:linux:arm64": "npm run package:target -- linux-arm64 --ci",
    "package:linux:all": "npm run package:linux:amd64 && npm run package:linux:arm64",
    "package:macos:universal": "npm run package:target -- macos --ci",
    "package:android:all": "npm run package:target -- android-all --ci",
    "version": "node scripts/release/version.mjs",
    "version:verify-tag": "node scripts/release/verify-tag-version.mjs",
    "release": "node scripts/release/release.mjs"
  },
  "dependencies": {
    "@screeps/renderer": "^1.6.8-arena",
    "@screeps/renderer-metadata": "^1.6.8-arena",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "next": "^15.3.0",
    "pixijs": "^7.1.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "swr": "^2.3.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.0",
    "@tauri-apps/cli": "^2",
    "@types/node": "25.2.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4.1.0",
    "typescript": "~5.8.3"
  }
}
