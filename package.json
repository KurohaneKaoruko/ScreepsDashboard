{
  "name": "screeps-dashboard",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "cd src-next && next dev",
    "build": "npm run build:web",
    "build:web": "cd src-next && next build",
    "start": "npm run start:web",
    "start:web": "cd src-next && next start",
    "lint": "npm run lint:web",
    "lint:web": "cd src-next && next lint",
    "typecheck:web": "tsc --project src-next/tsconfig.json --noEmit",
    "rust:fmt:check": "cargo fmt --manifest-path src-tauri/Cargo.toml -- --check",
    "rust:clippy": "cargo clippy --manifest-path src-tauri/Cargo.toml --all-targets -- -D warnings",
    "check": "npm run lint && npm run typecheck:web && npm run rust:fmt:check && npm run rust:clippy",
    "tauri": "tauri",
    "tauri:desktop:dev": "node node_modules/@tauri-apps/cli/tauri.js dev",
    "tauri:desktop:build": "node node_modules/@tauri-apps/cli/tauri.js build",
    "tauri:android:init": "node node_modules/@tauri-apps/cli/tauri.js android init --ci --skip-targets-install",
    "tauri:android:dev": "node node_modules/@tauri-apps/cli/tauri.js android dev",
    "tauri:android:build:apk": "node node_modules/@tauri-apps/cli/tauri.js android build --ci --apk --target aarch64 armv7",
    "tauri:android:build:aab": "node node_modules/@tauri-apps/cli/tauri.js android build --ci --aab --target aarch64 armv7"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "next": "^15.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "swr": "^2.3.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.0",
    "@tauri-apps/cli": "^2",
    "@types/node": "25.2.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "tailwindcss": "^4.1.0",
    "typescript": "~5.8.3"
  }
}
